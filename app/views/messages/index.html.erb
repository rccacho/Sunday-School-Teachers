<%= render 'layouts/header', user: @user %>
<%= render 'layouts/spacer', user: @user %>

<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<% @messages.each do |message| %>

  <p>Series: <%= message.series %></p>
  <p>Title: <%=link_to "#{message.title}", message_path(message) %></p>

<% end %>

<%= link_to 'New Message', new_user_message_path(current_user) %>


