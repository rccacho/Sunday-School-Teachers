    <%= f.label :costumes %>
    <%= f.text_field :costumes, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :props %>
    <%= f.text_field :props, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :featured %>
    <%= f.check_box :featured, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control' %>
  </div>


  <div class="actions">
    <%= f.submit 'OK', class: "btn btn-default" %>
