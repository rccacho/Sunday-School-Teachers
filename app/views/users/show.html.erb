<%= render 'layouts/header', user: @user %>
<%= render 'layouts/spacer', user: @user %>
<%= render 'layouts/banner', user: @user %>

<% if current_user?(@user) %>

  <div class='row'>
    <div class='profile col-xs-12 col-sm-4 col-md-4 text-center'>
      <%if current_user.avatar.blank? %>
        <%= image_tag('http://www.sessionlogs.com/media/icons/defaultIcon.png') %>
      <% else %>
        <%= image_tag(current_user.avatar) %>
      <% end %>

      <h4>
        <%= "Teacher " + current_user.first_name %>
      </h4>
    </div>
  </div>
    
  <div class="row"></div>

  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %>

<% else %>

  <div class='row'>
    <div class='profile col-xs-12 col-sm-4 col-md-4 text-center'>
      <%if @user.avatar.blank? %>
        <%= image_tag('http://www.sessionlogs.com/media/icons/defaultIcon.png') %>
      <% else %>
        <%= image_tag(@user.avatar) %>
      <% end %>
    </div>
  </div>
    
  <div class="row"></div>

  <h4>
  First name: 
    <%= @user.first_name %>
  </h4>

  <h4>
  Last name:
    <%= @user.last_name %>
  </h4>

  <h4>
  Email:
    <%= @user.email %>
  </h4>

  <h4>
  Birthday:
    <%= @user.birthday %>
  </h4>

  <h4>
  Phone:
    <%= @user.phone %>
  </h4>

  <h4>
  Grade:
    <%= @user.grade %>
  </h4>

  <%= link_to 'Back', users_path %>

<% end %>
